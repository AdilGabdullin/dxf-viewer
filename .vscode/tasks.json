{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm install",
            "type": "process",
            "command": "npm",
            "args": ["install"],
        },
        {
            "label": "Serve",
            "type": "process",
            "command": "npm",
            "args": ["run", "serve"],
        },
        {
            "label": "Build",
            "type": "process",
            "command": "npm",
            "args": ["run", "build"]
        },
        {
            "label": "Deploy",
            "type": "process",
            "command": "bash",
            "args": ["${workspaceFolder}/deploy.sh"]
        }
    ]
}
